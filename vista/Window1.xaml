<Window x:Class="Lab4.vista.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4.vista"
        mc:Ignorable="d"
        Title="LMAOBOOK - Home" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF06F4FF" Offset="0"/>
                <GradientStop Color="#FF8BF09D" Offset="0.447"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Registrar" Content="Registrar un nuevo usuario" HorizontalAlignment="Left" Margin="302,202,0,0" VerticalAlignment="Top" Width="156" Click="Registrar_Click" Height="25"/>
        <Button x:Name="Login" Content="Iniciar sesion" HorizontalAlignment="Left" Margin="302,251,0,0" VerticalAlignment="Top" Width="156" Height="25" Click="Login_Click"/>
        <Image HorizontalAlignment="Left" Height="104" Margin="224,24,0,0" VerticalAlignment="Top" Width="354" Source="logo.png"/>

    </Grid>
</Window>
